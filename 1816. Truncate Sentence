class Solution {
    public String truncateSentence(String s, int k) {
      int spaces=0;
      int i;
        for( i=0;i<s.length();i++){
            if(s.charAt(i)==' '){
                 spaces++;
;            }
              if(spaces==k){
                break;
               
              }
               
        }
        
                return s.substring(0, i);
    }
}
